{
    "compilerOptions": {
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "esnext",
        "sourceMap": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/**/*",
        "schema/**/*"
      ],
}